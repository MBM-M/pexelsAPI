<h1>Pexels Featured Collections</h1>

<%= form_with url: root_path, method: :get, local: true do %>
  <div>
    <%= label_tag :collection_id, "Collection ID:" %>
    <%= text_field_tag :collection_id, params[:collection_id], placeholder: "e.g. 12345" %>
    <%= submit_tag "Load Collection" %>
  </div>
<% end %>

<% if @photos.present? %>
  <div class="photo-grid">
    <% @photos.each do |photo| %>
      <div class="photo-card">
        <img src="<%= photo.src['medium'] %>" alt="Photo <%= photo.id %>">
      </div>
    <% end %>
  </div>
<% elsif params[:collection_id].present? %>
  <p>No photos found for Collection ID <%= params[:collection_id] %>.</p>
<% end %>
